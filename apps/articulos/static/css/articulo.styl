naranja = #FF6103
azul = #28B6DC
verde = #05A679
amarillo = #F6B604
rojo = #C90B33
negro = #262626
gris_oscuro = #57585B
gris_claro = #E3E3E3
blanco = #FFFFFF

@font-face {
	font-family: 'icono';
	src:url('../fonts/icomoon.eot?-m3d188');
	src:url('../fonts/icomoon.eot?#iefix-m3d188') format('embedded-opentype'),
		url('../fonts/icomoon.woff?-m3d188') format('woff'),
		url('../fonts/icomoon.ttf?-m3d188') format('truetype'),
		url('../fonts/icomoon.svg?-m3d188#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}

body
	font-size 16px
	background gris_claro

form
	position relative
	.titulo
		border: 2px solid #cdd1d4;
		border-radius: 0.3em;
		box-shadow inset 0 0px 6px rgba(0,0,0,0.2);
		box-sizing border-box;
		padding: 0.5em;
		width: 60%;
		position relative
		top 0.5em
		left 15em
		
		&:focus
			height 2.5em
			
	.contenido
		border 2px solid #cdd1d4
		border-radius .3em
		box-sizing border-box
		box-shadow inset 0 0px 6px rgba(0,0,0,0.2)
		display block
		height 24.3em
		margin .5em auto
		width 80%
		padding .5em
		
	.button
		background #ffa500
		border 1px solid #c9910a
		border-bottom 3px solid #c9910a
		border-radius 0.2em
		color #896008
		margin-top 0.5em
		padding 0.5em 4em
		position absolute
		top -0.5em
		left 85%

header
	background verde
	box-shadow 0 5px 0 rgba(negro,0.2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 2

	
	.logo
		img
			width 52px
			margin 10px 0 0 10px
			
	
	.new_history
		background naranja
		color blanco
		position absolute
		top 2em
		left 71%
		text-decoration none
		text-shadow 1px 1px 0px black
		font-style italic
		padding 0.2em 1em
		font-size 1.1em
		padding-left 3em
			
		&:before
			content: "\e908"
			font-family 'icono'
			display inline-block
			margin 0 3px 0 0
			text-shadow none
			font-size 2.5em
			position absolute
			top -9px
			left 1px
	
	.titulo
		margin 0 80px 0 70px
		h1
			position absolute
			font-size 18px
			font-weight normal
			top 1em
			left 4			
			margin 0
			padding 0
	
	.usuario
		position absolute
		right 50px
		top 10px
		
		.avatar
			margin 0 1em 0 0
			position relative
			z-index 69
			img
				border-radius 50%
				width 50px
				height 50px
				cursor pointer
			
		.flecha
			box-shadow 5px 5px 5px negro
			background naranja
			color blanco
			display block
			padding 5.5px
			position absolute
			right -9px
			text-align right
			text-decoration none
			top 12.5px
			width 50%
			z-index 0
			
			&:before
				content "\e967"
				display block
				font-family "icono"
				margin 1px 0 0 0
nav
	background azul 
	border-left 15px solid blanco
	position relative
	
	&:before
		border-bottom 20px solid transparent
		border-left 7px solid blanco
		border-top 20px solid transparent
		content ""
		left 0px
		position absolute
		top 0
	ul
		height 40px
		line-height 40px
		margin 0
		padding 0
		overflow-x auto
		white-space nowrap
		li
			display inline-block
			margin-left 10px
			a
				color blanco
				display block 
				margin 0 0.5em
				padding 0 0.2em
				text-decoration none
				
				&:hover
					background rgba(negro, 0.1)
					
.articulos
	padding 0.5em
	.articulo
		background blanco
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, 0.5)
		color negro
		margin-bottom 1em
		display inline-block
		width 48%
		vertival-align top
		
		&:nth-child(odd)
			margin-right 2%

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden
			display block
			
			.fecha
				float right
				margin 0 1em 0 0
			
			.votos
				float left
	
				.plus
					float left
					
					&:after
						content "\e9ea"
						font-family 'icono'

				.minus
					float right
					margin 0 180px 0 0
				
					&:after
						content '\ea02'
						font-family 'icono'

				.plus
				.minus
					text-decoration none
					color gris_oscuro
					
					&:after
						color azul	

				.voto
					display inline-block
					margin 0 4px 0 4px
					padding 0
		.descripcion
			display inline-block

			.detalle
				height 160px
				margin-left 130px
				
				.autor
					margin 0.5em 0 2em 0
					a
						color naranja

				/*.fecha
					float right
					margin 0 -10.5em 0 0*/
					
				.title
					font-size 1.1em
					font-style italic
					margin 0 
					padding 0.5em 0.5em 0 0
					
					a
						color negro
						

			.imagen
				float left
				img 
					height 150px
					vertical-align top
					width 120px
		